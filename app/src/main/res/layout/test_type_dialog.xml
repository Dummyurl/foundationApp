<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_220sdp"
        android:layout_centerInParent="true"
        android:background="@color/full_transparent">

        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dialog_image_bg_test"
            android:elevation="5dp"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_test"
            android:tint="@color/white" />

        <ImageButton
            android:id="@+id/dia_btn_cross"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/button_red"
            android:elevation="5dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_red"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:background="@drawable/dialog_bg">

            <com.pratham.foundation.customView.SansTextViewBold
                android:id="@+id/dia_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:lines="2"
                android:paddingHorizontal="@dimen/_7sdp"
                android:text="Choose Test Type"
                android:textColor="@color/material_blue_grey_80"
                android:textSize="@dimen/_15sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dia_title"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center">

                    <ImageView
                        android:id="@+id/btn_supervised"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/ripple_rectangle_transparent"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="centerInside"
                        android:src="@drawable/supervised_test_icon" />
                <com.pratham.foundation.customView.SansTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textColor="@color/material_blue_grey_80"
                    android:textSize="@dimen/_15sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/btn_unsupervised"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/ripple_rectangle_transparent"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="centerInside"
                        android:src="@drawable/unsupervised_test_icon" />

            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:elevation="5dp">


            <com.pratham.foundation.customView.SansButton
                android:id="@+id/dia_btn_yellow"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_toLeftOf="@id/dia_btn_green"
                android:background="@drawable/button_yellow"
                android:elevation="5dp"
                android:text="yellow"
                android:visibility="visible"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

            <com.pratham.foundation.customView.SansButton
                android:id="@+id/dia_btn_green"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/button_red"
                android:elevation="5dp"
                android:text="green"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

            <com.pratham.foundation.customView.SansButton
                android:id="@+id/dia_btn_red"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_toRightOf="@id/dia_btn_green"
                android:background="@drawable/button_green"
                android:elevation="5dp"
                android:text="red"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>

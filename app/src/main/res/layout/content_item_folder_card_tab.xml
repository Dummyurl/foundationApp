<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="180dp"
    android:background="?attr/selectableItemBackground"
    android:layout_marginStart="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg"
        android:layout_marginBottom="@dimen/_5sdp"
        android:elevation="@dimen/_3sdp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_Image"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:actualImageScaleType="fitCenter"
            android:layout_marginEnd="@dimen/_5sdp"
            app:placeholderImage="@drawable/place_holder_temp"
            app:roundedCornerRadius="@dimen/_10sdp"
            app:roundingBorderWidth="@dimen/_1sdp" />

        <com.pratham.foundation.customView.FredokaOneTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:layout_toStartOf="@+id/item_Image"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <com.pratham.foundation.customView.progress_layout.ProgressLayout
            android:id="@+id/card_progressLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_6sdp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_5sdp"
            app:c_borderWidth="1dp"
            app:c_progress="40"
            app:c_progressColor="@color/white"
            app:c_progressRadius="@dimen/_3sdp" />

    </RelativeLayout>

</RelativeLayout>
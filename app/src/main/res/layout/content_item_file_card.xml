<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="205dp"
    android:layout_height="@dimen/_100sdp"
    android:elevation="3dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp">

    <RelativeLayout
        android:id="@+id/file_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/file_card_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="3dp"
        android:background="@color/full_transparent"
        android:padding="6dp">

        <RelativeLayout
            android:id="@+id/rl_root1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/card_img"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="1dp"
                app:cardCornerRadius="13dp"
                app:cardElevation="3dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/file_Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/card_img"
                    android:layout_alignTop="@+id/card_img"
                    android:foregroundGravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/pratham_logo" />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_img"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/btn_file_download"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_download"
                    android:visibility="visible" />

                <com.pratham.foundation.customView.SansTextView
                    android:id="@+id/file_Title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/ib_action_btn"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/app_name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
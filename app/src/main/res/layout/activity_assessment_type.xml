<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_gradiance_bg">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:background="@color/contentCardColor"
        android:gravity="center"
        android:text="Select Test Mode"
        android:textColor="@color/colorWhiteLight"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold|italic" />

    <RelativeLayout
        android:id="@+id/rl_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/selectors_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/btn_yes"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/ripple_effect"
                android:padding="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/btn_no"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_toRightOf="@id/btn_yes"
                android:background="@drawable/ripple_effect"
                android:layout_marginLeft="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:scaleType="centerInside" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/supervisor_form_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_162sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/selectors_layout"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_160sdp"
                android:scaleType="fitCenter"
                android:padding="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/ripple_effect"
                android:src="@drawable/photo_placeholder"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/iv_image"
                android:layout_height="match_parent">

                <com.an.customfontview.CustomEditText
                    android:id="@+id/supervisor_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/choose_level_bg"
                    android:hint="Supervisor Name"
                    android:layout_centerVertical="true"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="@dimen/_15sdp" />

                <com.pratham.foundation.customView.SansButton
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Submit"
                    android:background="@drawable/ripple_effect"
                    android:layout_below="@+id/supervisor_name"/>


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_attendence"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/supervisor_form_rl"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/test_attendnce_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clipToPadding="false"
                android:gravity="center"
                android:layoutAnimation="@anim/layout_fall_down"
                android:scrollbars="vertical" />

        </RelativeLayout>


    </RelativeLayout>

    </RelativeLayout>

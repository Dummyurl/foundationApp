<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_top">

    <com.pratham.foundation.custumView.SansButton
        android:id="@+id/btn_download_all_data"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp"
        android:text="Download all data from local repository"
        android:background="@drawable/yellow_button" />


    <ScrollView
        android:layout_below="@+id/btn_download_all_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/students_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:padding="@dimen/_5sdp" />

            <com.pratham.foundation.custumView.SansButton
                android:id="@+id/add_student"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/students_recyclerView"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/green_button"
                android:text="Create Profile"
                android:elevation="@dimen/_3sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</RelativeLayout>

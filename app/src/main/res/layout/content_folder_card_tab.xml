<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/full_transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp">

        <com.pratham.foundation.customView.SansButton
            android:id="@+id/btnMore"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="?android:selectableItemBackground"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:text="See All"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_8sdp"
            android:visibility="visible" />

        <com.pratham.foundation.customView.SansButton
            android:id="@+id/ib_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/temp_button"
            android:drawableLeft="@drawable/ic_download"
            android:drawablePadding="@dimen/_5sdp"
            android:elevation="@dimen/_2sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Download"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_8sdp"
            android:visibility="gone" />

        <com.pratham.foundation.customView.SansTextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:maxLines="2"
            android:shadowColor="@color/whiteButtonPressedBg"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:text="City Of Stories"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_list"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/topPanel" />

</RelativeLayout>

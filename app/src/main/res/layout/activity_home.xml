<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:elevation="@dimen/_10sdp"
        android:background="@drawable/home_header_1_bg"
        android:layout_height="110dp">
<!--
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:gravity="top"
            android:orientation="horizontal">
-->
            <RelativeLayout
                android:id="@+id/leftCol"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_toStartOf="@id/profile_header"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="60dp"
                android:layout_alignParentTop="true">

                <com.pratham.foundation.customView.SansTextView
                    android:id="@+id/tv_Topic"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:text="Topic"
                    android:textSize="32dp" />

                <com.pratham.foundation.customView.SansTextView
                    android:id="@+id/tv_Activity"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_below="@+id/tv_Topic"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:text="Topic"
                    android:textSize="25sp" />

            </RelativeLayout>

        <com.pratham.foundation.customView.progress_layout.ProgressLayout
            android:id="@+id/card_progressLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_alignParentBottom="true"
            app:c_borderWidth="1dp"
            app:c_progress="40"
            app:c_progressColor="@color/white"
            app:c_progressRadius="@dimen/_3sdp" />

        <RelativeLayout
            android:id="@+id/profile_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="30dp"
            android:elevation="@dimen/_50sdp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_level"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:elevation="@dimen/_52sdp"
                android:src="@drawable/level_1"
                />

<!--
            <github.hellocsl.cursorwheel.CursorWheelLayout
                android:id="@+id/level_circle"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/new_grad_round"
                app:wheelBackgroundColor="@color/full_transparent"
                app:wheelCursorColor="@color/colorAccentDark"
                app:wheelCursorHeight="20dip"
                app:wheelFlingValue="1"
                app:wheelSelectedAngle="180">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/level_1" />

            </github.hellocsl.cursorwheel.CursorWheelLayout>
-->

        </RelativeLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.pratham.foundation.customView.submarine_view.SubmarineView
        android:id="@+id/submarine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:alpha="0.9"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:animateLayoutChanges="true"
        android:elevation="10dp"
        app:submarine_autoDip="true"
        app:submarine_animation="scale"
        app:submarine_borderColor="@color/red"
        app:submarine_borderSize="@dimen/_1sdp"
        app:submarine_circleAnchor="top"
        app:submarine_circleDrawable="@drawable/ic_close_red"
        app:submarine_circleSize="@dimen/_30sdp"
        app:submarine_color="@color/colorText"
        app:submarine_duration="400"
        app:submarine_orientation="vertical" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        android:background="@color/level_1_color"
        app:tabIndicatorHeight="@dimen/_3sdp"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorColor="@color/trans_card_text"
        app:tabGravity="fill"
        app:tabMode="fixed" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_back"
        android:layout_alignParentStart="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:elevation="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_info"
        android:layout_alignParentEnd="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:elevation="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorParent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_rl"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/home_header_1_bg"
        android:elevation="@dimen/_3sdp">

        <com.pratham.foundation.customView.progress_layout.ProgressLayout
            android:id="@+id/full_level_progressLayout"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginBottom="8dp"
            android:elevation="15dp"
            android:maxHeight="15dp"
            android:minHeight="15dp"
            app:c_borderWidth="2dp"
            app:c_progress="0"
            app:c_progressColor="@color/colorPrimaryDark"
            app:c_progressRadius="7dp" />


        <com.pratham.foundation.customView.discrete_view.DiscreteScrollView
            android:id="@+id/level_recycler"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            app:dsv_orientation="vertical" />

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/level_recycler">

            <RelativeLayout
                android:id="@+id/profile_header"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentTop="true">

                <com.pratham.foundation.customView.CircularImageView
                    android:id="@+id/profileImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/b2"
                    app:border="true"
                    app:border_color="@color/colorAccent"
                    app:border_width="2dp"
                    app:shadow="true" />

                <com.pratham.foundation.customView.SansTextView
                    android:id="@+id/tv_studentName"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/profileImage"
                    android:gravity="bottom"
                    android:lines="2"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/_18sdp" />

                <com.pratham.foundation.customView.SansTextView
                    android:id="@+id/tv_level"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/tv_studentName"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/profileImage"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_rl"
        android:layout_marginBottom="?attr/actionBarSize"
        android:scrollbars="none"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/test_lang_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_rl"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/gradient_spinner"
        android:popupBackground="@drawable/choose_level_bg"
        android:visibility="gone" />

    <com.pratham.foundation.customView.SansButton
        android:id="@+id/btn_test_dw"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@drawable/ripple_read"
        android:drawableLeft="@drawable/ic_download"
        android:drawablePadding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        android:paddingHorizontal="10dp"
        android:text="Download"
        android:layout_marginBottom="@dimen/_60sdp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/test_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_below="@+id/test_lang_spinner"
        android:layout_marginBottom="?attr/actionBarSize"
        android:scrollbars="none"
        android:visibility="gone" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/level_1_color"
        app:elevation="@dimen/_2sdp"
        app:itemIconTint="@color/white"
        app:itemBackground="?attr/selectableItemBackground"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="selected"
        app:menu="@menu/navigation" />

</RelativeLayout>
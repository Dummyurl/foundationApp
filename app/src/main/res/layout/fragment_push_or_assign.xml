<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_anim_fourth_layer"
    tools:context=".ui.admin_panel.fragment_admin_panel.PushOrAssign.PushOrAssignFragment">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorBtnRedDark">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_left_arrow_white" />

        <com.pratham.foundation.customView.SansTextViewBold
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/btn_back"
            android:layout_toStartOf="@+id/just_view"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center"
            android:text="Menu"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <View
            android:id="@+id/just_view"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <com.pratham.foundation.customView.SansButton
            android:id="@+id/btn_download_all_data"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@drawable/red_button"
            android:text="Download all data"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <com.pratham.foundation.customView.SansButton
            android:id="@+id/btn_assign"
            android:layout_width="@dimen/_150sdp"
            android:textColor="@color/white"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@drawable/red_button"
            android:text="Assign Groups"
            android:textSize="@dimen/_12sdp" />

        <com.pratham.foundation.customView.SansButton
            android:id="@+id/btn_push"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:textColor="@color/white"
            android:background="@drawable/red_button"
            android:text="Push Data"
            android:textSize="@dimen/_12sdp" />

        <com.pratham.foundation.customView.SansButton
            android:id="@+id/btn_progress"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:textColor="@color/white"
            android:background="@drawable/red_button"
            android:text="Get Progress"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_anim_fourth_layer"
    android:orientation="vertical">

    <com.pratham.foundation.customView.SansTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:layout_alignParentTop="true"
        android:padding="@dimen/_5sdp"
        android:text="Copy Writing"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_330sdp"
        android:layout_below="@id/title"
        android:background="@drawable/dialog_bg"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scrollView"
        android:gravity="center"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/controls_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3">
            <com.pratham.foundation.customView.fonts.SansButton
                android:id="@+id/capture"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/purple_button"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:text="capture" />
            <com.pratham.foundation.customView.fonts.SansButton
                android:id="@+id/preview"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:background="@drawable/purple_button"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="preview" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/controls_bot"
            android:layout_below="@id/controls_top"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <com.pratham.foundation.customView.fonts.SansButton
                android:id="@+id/previous"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:background="@drawable/red_button"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Previous" />

            <com.pratham.foundation.customView.fonts.SansButton
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:background="@drawable/yellow_button"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="submit" />

            <com.pratham.foundation.customView.fonts.SansButton
                android:id="@+id/next"
                android:visibility="gone"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:background="@drawable/green_button"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Next" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
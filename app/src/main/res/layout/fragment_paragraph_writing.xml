<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_anim_fourth_layer"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/paragraph"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/controls_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3">

            <com.pratham.foundation.customView.SansButton
                android:id="@+id/capture"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/purple_button"
                android:text="capture"
                android:textColor="@color/white" />

            <com.pratham.foundation.customView.SansButton
                android:id="@+id/preview"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/purple_button"
                android:text="preview"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controls_bot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/controls_top"
            android:layout_marginTop="@dimen/_5sdp">

            <com.pratham.foundation.customView.SansButton
                android:id="@+id/previous"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:text="Previous"
                android:textColor="@color/white"
                android:visibility="gone" />

            <com.pratham.foundation.customView.SansButton
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/yellow_button"
                android:text="submit"
                android:textColor="@color/white" />

            <com.pratham.foundation.customView.SansButton
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/green_button"
                android:text="Next"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/paragraph"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_330sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@id/title"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/dialog_bg"
            android:layout_gravity="center"
            android:elevation="@dimen/_3sdp"
            android:orientation="vertical" />

    <com.pratham.foundation.customView.SansTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/red"
        android:padding="@dimen/_5sdp"
        android:text="Copy Writing"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_anim_fourth_layer"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/paragraph"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/controls_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/capture"
                style="@style/capturebtn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1" />

            <com.pratham.foundation.customView.SansButton
                android:id="@+id/preview"
                style="@style/submitbtn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:text="preview" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controls_bot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/controls_top"
            android:layout_marginTop="@dimen/_5sdp">



            <com.pratham.foundation.customView.SansButton
                android:id="@+id/submit"
                style="@style/submitbtn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="submit" />

        </LinearLayout>
    </RelativeLayout>

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/paragraph"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_330sdp"
        android:layout_below="@id/space"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        style="@style/paragraph"
        />
    <!-- <com.pratham.foundation.customView.SansTextView
         android:id="@+id/title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:background="@color/red"
         android:padding="@dimen/_5sdp"
         android:text="Copy Writing"
         android:textAlignment="center"
         android:textColor="@color/white"
         android:textSize="25sp" />-->
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_child_attendance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_stroke_bg"
    android:padding="8dp"
    android:clickable="true">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_child"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@android:color/transparent"
        app:roundingBorderColor="@color/colorAccent"
        app:roundingBorderWidth="@dimen/_2sdp"
        app:roundedCornerRadius="@dimen/_30sdp"
        app:actualImageScaleType="centerInside"
        app:placeholderImage="@drawable/b1"/>

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_photo_camera" />

    <com.pratham.foundation.customView.SansTextView
        android:id="@+id/child_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_below="@+id/iv_child"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="aasdldsd"
        android:textColor="#000"
        android:textSize="@dimen/_12sdp" />
</RelativeLayout><!--</android.support.design.card.MaterialCardView>-->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_child_attendance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_stroke_bg"
    android:padding="8dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_child"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/g1" />

    <com.pratham.foundation.custumView.SansTextView
        android:id="@+id/child_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_below="@+id/iv_child"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="aasdldsd"
        android:textColor="#000"
        android:textSize="@dimen/_12sdp" />
</RelativeLayout><!--</android.support.design.card.MaterialCardView>-->